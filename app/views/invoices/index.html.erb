<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-8 col-md offsest-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="panel-title"> Listing Invoices </div>
      </div>


<div class="panel-body">
<table>
  <thead>
    <tr>

      <th>Company</th>
      <th>Contragent</th>
      <th>Amount</th>
      <th>Date</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>

        <td><%= invoice.company %></td>
        <td><%= invoice.contragent %></td>
        <td><%= invoice.amount %><%= invoice.currency %></td>
        <%= invoice.currency %>
        <td><%= invoice.date %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="panel-footer">
<%= link_to '<button type="button" class="btn btn-primary">New Invoice</button>'.html_safe, new_invoice_path %>
</div>
</div>
</div>
</div>
